<% if ENV['SUBHEADER'] %>
  <h2><%= ENV['SUBHEADER'] %></h2>
<% end %>
<%= form_for(@signup) do |f| %>
  <% if @signup.errors.any? %>
    <div class="alert alert-error">
      <a class="close" data-dismiss="alert">Ã—</a>
      <% @signup.errors.full_messages.each do |msg| %>
        <%= content_tag :div, msg, :id => "flash_error" if msg.is_a?(String) %>
      <% end %>
    </div>
  <% end %>

  <div class="control-group">
    <div class="controls">
      <div class="input-append">
        <%= text_field_tag :email, (params[:signup][:email] if params[:signup] or nil), name: 'signup[email]', placeholder: 'Email address', class: 'span4 btn-large' %>
        <%= submit_tag ENV['SUBMIT_TEXT'].html_safe, class: 'btn btn-success btn-large' %>
      </div>
    </div>
  </div>
<% end %>

